        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": ".",
    },
    "include": [
        "scraper",
        "api"
    ],
    "exclude": [
        "node_modules"
    ]
}